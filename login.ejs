<%- include ('partials/header') %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 col-md-7 intro-section">
                <div class="brand-wrapper">
                    <h1>Send Encrypted Message</h1>
                </div>
                <div class="intro-content-wrapper">
                    <h1 class="intro-title">Welcome to SecretSent</h1>
                    <p class="intro-text">
                        Here you can share your Secrets to the world anonymously.. Please Login
                        <i class="fas fa-arrow-circle-right" style="font-size: 16px"></i>
                    </p>
                </div>
            </div>
            <div class="col-sm-6 col-md-5 form-section">
                <div class="login-wrapper">
                    <h2 class="login-title">Log-in</h2>
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input
                                type="email"
                                name="username"
                                id="email"
                                class="form-control"
                                placeholder="Email"
                            />
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="sr-only">Password</label>
                            <input
                                type="password"
                                name="password"
                                id="password"
                                class="form-control"
                                placeholder="Password"
                            />
                        </div>
                        <button type="submit" class="btn btn-dark">Sign in</button>
                    </form>
                    <p class="login-wrapper-footer-text">
                        Don't have an Account?
                        <a href="/register" class="text-reset">SignUp</a>
                    </p>
                </div>
            </div> 
        </div>
    </div>

<%- include ('partials/footer') %>